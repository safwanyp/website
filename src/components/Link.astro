---
import { combineClassNames } from '@/utils';

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
};

const { href, external, underline = true, ...rest } = Astro.props;
---

<a
  href={href}
  target={external ? '_blank' : '_self'}
  class={combineClassNames(
    `inline-block
    decoration-black/15 dark:decoration-white/30
    hover:decoration-lime-600 dark:hover:decoration-lime-600/50
    text-current
    hover:text-lime-700 hover:dark:text-lime-300
    transition-all duration-300 ease-in-out`,
    underline && 'underline underline-offset-2'
  )}
  {...rest}
>
  <slot />
</a>
